{% set previousPost = collections["log_" + lang ] | getPreviousCollectionItem(page) %}
{% set nextPost = collections["log_" + lang ] | getNextCollectionItem(page) %}

<section class="pagination">
  {% if previousPost %}
  <a href="{{ previousPost.url }}">{{ languages[lang].previousPostText }}</a>
  {% else %}
  <span></span> <!-- Placeholder for spacing -->
  {% endif %}

  {% if nextPost %}
  <a href="{{ nextPost.url }}">{{ languages[lang].nextPostText }}</a>
  {% endif %}
</section>